{
  "$schema": "https://mcplite.dev/schema/registry.json",
  "version": "1.0.0",
  "mcps": {
    "supabase": {
      "name": "Supabase",
      "description": "Database operations, auth, storage, edge functions",
      "source": "npm:@supabase/mcp-server-supabase",
      "tags": ["database", "postgres", "auth", "storage"],
      "tokenCost": 5800,
      "config": {
        "command": "npx",
        "args": ["-y", "@supabase/mcp-server-supabase@latest"],
        "env": {
          "SUPABASE_ACCESS_TOKEN": "${SUPABASE_ACCESS_TOKEN}"
        }
      },
      "detection": {
        "packages": ["@supabase/supabase-js", "@supabase/ssr"],
        "envVars": ["SUPABASE_URL", "SUPABASE_ANON_KEY"],
        "files": ["supabase/config.toml"]
      }
    },
    "apify": {
      "name": "Apify",
      "description": "Web scraping, automation, and data extraction from any website",
      "source": "npm:@apify/actors-mcp-server",
      "tags": ["scraping", "web", "automation", "data"],
      "tokenCost": 7200,
      "config": {
        "command": "npx",
        "args": ["-y", "@apify/actors-mcp-server"],
        "env": {
          "APIFY_TOKEN": "${APIFY_TOKEN}"
        }
      },
      "detection": {
        "packages": ["apify", "crawlee"],
        "envVars": ["APIFY_TOKEN"],
        "files": []
      }
    },
    "exa": {
      "name": "Exa",
      "description": "AI-powered web search and content retrieval",
      "source": "npm:exa-mcp-server",
      "tags": ["search", "web", "research"],
      "tokenCost": 650,
      "config": {
        "command": "npx",
        "args": ["-y", "exa-mcp-server"],
        "env": {
          "EXA_API_KEY": "${EXA_API_KEY}"
        }
      },
      "detection": {
        "packages": [],
        "envVars": ["EXA_API_KEY"],
        "files": []
      }
    },
    "filesystem": {
      "name": "Filesystem",
      "description": "Read/write files, create directories, search files",
      "source": "npm:@modelcontextprotocol/server-filesystem",
      "tags": ["files", "filesystem", "directories"],
      "tokenCost": 450,
      "config": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-filesystem", "${HOME}"]
      },
      "detection": {
        "packages": [],
        "envVars": [],
        "files": []
      }
    },
    "slack": {
      "name": "Slack",
      "description": "Send messages, list channels, reply to threads in Slack",
      "source": "npm:@modelcontextprotocol/server-slack",
      "tags": ["slack", "messaging", "communication"],
      "tokenCost": 500,
      "config": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-slack"],
        "env": {
          "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
          "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
        }
      },
      "detection": {
        "packages": ["@slack/web-api", "@slack/bolt"],
        "envVars": ["SLACK_BOT_TOKEN", "SLACK_TOKEN"],
        "files": []
      }
    },
    "notion": {
      "name": "Notion",
      "description": "Read and write Notion pages, databases, and blocks",
      "source": "npm:@notionhq/notion-mcp-server",
      "tags": ["notion", "notes", "documentation", "wiki"],
      "tokenCost": 800,
      "config": {
        "command": "npx",
        "args": ["-y", "@notionhq/notion-mcp-server"],
        "env": {
          "OPENAPI_MCP_HEADERS": "{\"Authorization\": \"Bearer ${NOTION_API_KEY}\", \"Notion-Version\": \"2022-06-28\"}"
        }
      },
      "detection": {
        "packages": ["@notionhq/client"],
        "envVars": ["NOTION_API_KEY", "NOTION_TOKEN"],
        "files": []
      }
    },
    "sentry": {
      "name": "Sentry",
      "description": "Error tracking, issue management, and performance monitoring",
      "source": "npm:@sentry/mcp-server",
      "tags": ["errors", "monitoring", "debugging", "performance"],
      "tokenCost": 600,
      "config": {
        "command": "npx",
        "args": ["-y", "@sentry/mcp-server"],
        "env": {
          "SENTRY_AUTH_TOKEN": "${SENTRY_AUTH_TOKEN}"
        }
      },
      "detection": {
        "packages": ["@sentry/node", "@sentry/react", "@sentry/nextjs"],
        "envVars": ["SENTRY_DSN", "SENTRY_AUTH_TOKEN"],
        "files": ["sentry.client.config.ts", "sentry.server.config.ts"]
      }
    }
  }
}
